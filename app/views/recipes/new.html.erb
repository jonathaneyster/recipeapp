<h1 align="center">Create a new recipe</h1>
<hr />

<div class="col-md-10 offset-md-2">
  <% if @recipe.errors.any? %>
    <%= pluralize(@recipe.errors.count, "error") %>
    prohibited this <%= @recipe.class %> from being saved:
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>  
  <% end %>
</div>

<div class="row">
  <div class="col-md-12 offset-md-2">
    <%= form_for @recipe, :html => {class: "form-horizontal", role: "form"} do |recipe| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= recipe.label :name %>
      </div>
      <div class="col-md-8">
        <%= recipe.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: "true" %>
      </div>
    <br />  
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= recipe.label :description %>
      </div>
      <div class="col-md-8">
        <%= recipe.text_area :description, rows: 10, class: "form-control", placeholder: "Description of recipe", autofocus: "true" %>
      </div>      
    </div>
  </div>
  <br />
  <div class="form-group">
    <div class="col-md-6 md-offset-6">
      <%= recipe.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="col-md-4 md-offset-4 new-recipe-return">
     <%= link_to "Cancel and return to recipe listing", recipes_path %>
  </div>  
</div>
<% end %>
