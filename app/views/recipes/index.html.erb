<div class=recipeContainer>  
  <h1 align="center">List of recipes</h1>
  <hr />
  <% @recipes.each do |recipe| %>
    <div class=row>
      <div class="col-md-2 user-info">
        <secion class="center">
          <%= gravatar_for(recipe.user, size: 120) %>
        </secion>
      </div>
      <div class="col-md-8 card card-body bg-light" style="background-color: #f4f5f7;">
        <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
        <p><%= truncate(recipe.description, length:150) %></p>
        <p>
          <span class="quiet"><small><%= time_ago_in_words(recipe.created_at) %></small></span>
        </p>
      </div>
    </div>  
  <% end %>
</div>  