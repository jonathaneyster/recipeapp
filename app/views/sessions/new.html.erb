<h1 align="center">Login</h1>
<hr />
<div class="row">
  <div class="col-md-12 offset-md-2">
    <%= form_for :session, :html => {class: "form-horizontal", role: "form"}, url: login_path do |user| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= user.label :email %>
      </div>
      <div class="col-md-8">
        <%= user.email_field :email, class: "form-control", placeholder: "Email address", autofocus: "true" %>
      </div>
    <br />  
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= user.label :password %>
      </div>
      <div class="col-md-8">
        <%= user.password_field :password, class: "form-control", placeholder: "Password", autofocus: "true" %>
      </div>      
    </div>
  </div>
  <br />
  <div class="form-group">
    <div class="col-md-6 md-offset-6">
      <%= user.submit "Log in", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
<% end %>