<<h1 align="center">Sign up for the application</h1>
<hr />

<%= render 'shared/errors', obj: @user %>
<div class="row">
  <div class="col-md-12 offset-md-2">
    <%= form_for @user, :html => {class: "form-horizontal", role: "form"} do |user| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= user.label :name %>
      </div>
      <div class="col-md-8">
        <%= user.text_field :name, class: "form-control", placeholder: "Username", autofocus: "true" %>
      </div>
    <br />  
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= user.label :email %>
      </div>
      <div class="col-md-8">
        <%= user.email_field :email, class: "form-control", placeholder: "Enter email address", autofocus: "true" %>
      </div>      
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= user.label :password %>
      </div>
      <div class="col-md-8">
        <%= user.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: "true" %>
      </div>      
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= user.label :password_confirmation, "Confirm password" %>
      </div>
      <div class="col-md-8">
        <%= user.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", autofocus: "true" %>
      </div>      
    </div>    
  </div>
  <br />
  <div class="form-group">
    <div class="col-md-6 md-offset-6">
      <%= user.submit "Create account", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="col-md-4 md-offset-4 new-recipe-return">
     <%= link_to "Cancel and return to recipe listing", recipes_path %>
  </div>  
</div>
<% end %>