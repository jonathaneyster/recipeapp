<div class="row">
  <div class="col-md-2">
    <section class="user-info center">
      <%= gravatar_for(comment.user, size: 40) %>
    </section>
  </div>
  <div class="col-md-8 card">
    <p><%= comment.description %></p>
    <p><span class="quiet"><small>Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %></small></span></p>
  </div>
</div>